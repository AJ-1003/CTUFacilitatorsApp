<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CTU Facilitators App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loginPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CTUFacilitatorsApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" 
    integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 ctu-nav-color">
                <div class="container">
                    <div class="row align-content-center">
                        <div class="col">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Software Development</a>
                        </div>
                        <div class="col">
                            <img class="nav-img" src="/img/ctu-navbar-logo.png" alt="logo" height=50px/>
                        </div>
                        <div class="col">
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            @*<div class="container">
                <div class="row align-items-center">
                    <a class="navbar-brand col" asp-area="" asp-controller="Home" asp-action="Index">Software Development</a>
                </div>
                <div class="row align-items-center">
                    <div class="col">
                        <img class="nav-img" src="/img/ctu-navbar-logo.png" alt="logo" height=50px/>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <partial name="_LoginPartial" />
                    </div>
                    </div>
                </div>
            </div>*@
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - CTU Facilitators App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
